rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Products/Inventory - authenticated users can read, only creators can write
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId);
    }
    
    // Orders - authenticated users can only access their own
    match /orders/{orderId} {
      allow read, write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId);
    }
    
    // Proposals - authenticated users can only access their own
    match /proposals/{proposalId} {
      allow read, write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId);
    }
    
    // Equipment - authenticated users can only access their own
    match /equipment/{equipmentId} {
      allow read, write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId);
    }
    
    // Consumables - authenticated users can only access their own
    match /consumables/{consumableId} {
      allow read, write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId);
    }
    
    // Warehouses - authenticated users can only access their own
    match /warehouses/{warehouseId} {
      allow read, write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId);
    }
    
    // Audit logs - authenticated users can read, system can write
    match /auditLogs/{logId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if false; // Audit logs should not be modified
    }
    
    // Settings - authenticated users can only access their own
    match /settings/{settingId} {
      allow read, write: if isOwner(settingId);
    }
    
    // Discontinued items - authenticated users can read, only owners write
    match /discontinued/{itemId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId);
    }
    
    // Projects - authenticated users can only access their own
    match /projects/{projectId} {
      allow read, write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId);
    }
    
    // Project usages - authenticated users can only access their own
    match /project_usages/{usageId} {
      allow read, write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId);
    }
  }
}