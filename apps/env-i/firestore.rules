rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is part of the organization
    function isDomainUser() {
      return request.auth != null && 
             request.auth.token.email.matches('.*@adctasarim[.]com');
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Helper to check access (Owner OR Domain User)
    function hasAccess(userId) {
      return isOwner(userId) || isDomainUser();
    }
    
    // Users collection - users can only read/write their own data
    // Exception: Domain users might need to read other profiles? Let's keep strict for now unless requested.
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isDomainUser();
    }
    
    // Products/Inventory - authenticated users can read, domain users/creators can write
    match /products/{productId} {
      allow read: if isAuthenticated();
      // Allow write if creator OR if domain user
      allow write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId) || isDomainUser();
    }
    
    // Orders - Domain users have access
    match /orders/{orderId} {
      allow read, write: if hasAccess(resource.data.userId) || hasAccess(request.resource.data.userId);
    }
    
    // Proposals
    match /proposals/{proposalId} {
      allow read, write: if hasAccess(resource.data.userId) || hasAccess(request.resource.data.userId);
    }
    
    // Equipment
    match /equipment/{equipmentId} {
      allow read, write: if hasAccess(resource.data.userId) || hasAccess(request.resource.data.userId);
    }
    
    // Consumables
    match /consumables/{consumableId} {
      allow read, write: if hasAccess(resource.data.userId) || hasAccess(request.resource.data.userId);
    }
    
    // Warehouses
    match /warehouses/{warehouseId} {
      allow read, write: if hasAccess(resource.data.userId) || hasAccess(request.resource.data.userId);
    }
    
    // Audit logs - Domain users can read
    match /auditLogs/{logId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if false; 
    }
    
    // Settings
    match /settings/{settingId} {
      allow read, write: if isOwner(settingId) || isDomainUser();
    }
    
    // Discontinued items
    match /discontinued/{itemId} {
      allow read: if isAuthenticated();
      allow write: if hasAccess(resource.data.userId) || hasAccess(request.resource.data.userId);
    }
    
    // Projects
    match /projects/{projectId} {
      allow read, write: if hasAccess(resource.data.userId) || hasAccess(request.resource.data.userId);
    }
    
    // Project usages
    match /project_usages/{usageId} {
      allow read, write: if hasAccess(resource.data.userId) || hasAccess(request.resource.data.userId);
    }
  }
}